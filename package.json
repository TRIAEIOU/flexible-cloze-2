{
  "type": "module",
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^15.0.2",
    "@rollup/plugin-terser": "^0.4.0",
    "@rollup/plugin-typescript": "^11.1.0",
    "copy-to-clipboard": "^3.3.3",
    "fs-extra": "^11.1.1",
    "rollup": "^3.20.2",
    "rollup-plugin-copy-merge": "^1.0.0",
    "shx": "^0.3.4",
    "tslib": "^2.5.0",
    "zip-build": "^1.8.0"
  },
  "scripts": {
    "build-clean": "shx rm -rf ./build/* ./dist/* ./bin/*",
    "build-template": "rollup -c",
    "build-py": "shx cp ./src/py/*.py ./bin",
    "build-cfg": "shx cp ./src/html/fc2.css ./bin/ && shx cp ./src/html/fc2.css ./bin/fc2m.css",
    "build-doc": "shx cp ./LICENSE ./README.md ./bin",
    "build": "npm run build-clean && npm run build-template && npm run build-py && npm run build-cfg && npm run build-doc",
    "pack": "zip-build \"./bin\" \"./dist\" -o -t \"update.zip\" && cross-env-shell pandoc -t $CODEPATH/pandoc/anki-addon.lua --abbreviations=$CODEPATH/pandoc/empty ./README.md -o ./dist/update.txt"
  }
}
